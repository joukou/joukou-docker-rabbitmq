# fail hard and fast even on pipelines
set -eo pipefail

[[ $DEBUG ]] && set -x

export FQDN=$(hostname -f)
export RABBITMQ_NODENAME="rabbit@${FQDN}"
echo "$(date '+%Y-%m-%dT%T%z') $FQDN boot[$$] RABBITMQ_NODENAME=${RABBITMQ_NODENAME}"

chown rabbitmq:rabbitmq /var/lib/rabbitmq /var/log/rabbitmq
chmod 755 /var/lib/rabbitmq /var/log/rabbitmq

echo "$(date '+%Y-%m-%dT%T%z') $FQDN boot[$$] starting rabbitmq-server..."
exec /sbin/setuser rabbitmq /usr/sbin/rabbitmq-server