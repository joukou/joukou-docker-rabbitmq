[Unit]
Description=RabbitMQ
Documentation=http://www.rabbitmq.com/documentation.html
After=docker.service
Requires=docker.service
After=etcd.service
Requires=etcd.service

[Service]
# Run as root because
# - systemd-docker requires root privileges
# - /root/.dockercfg for registry authentication
User=root
# sd_notify(3) is required by systemd-docker
Type=notify
NotifyAccess=all
# Large start timeout is to allow for pulling down Docker images from quay.io
TimeoutStartSec=12min
TimeoutStopSec=15
# On failures try to restart every 10 seconds rate limiting to 5 attempts every 10 minutes
#Restart=on-failure
#RestartSec=10s
#StartLimitInterval=600
#StartLimitBurst=5

# Installs systemd-docker before the service is started
ExecStartPre=/usr/bin/docker run --rm -v /opt/bin:/opt/bin ibuildthecloud/systemd-docker

# Kills and removes existing container before the service is started
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p

# Pulls the latest image before the service is started
ExecStartPre=/usr/bin/docker pull quay.io/joukou/rabbitmq

ExecStart=/opt/bin/systemd-docker run --name %p \
-v /var/lib/rabbitmq:/var/lib/rabbitmq \
-v /var/log/rabbitmq:/var/log/rabbitmq \
-p 4369:4369 \
-p 5672:5672 \
-p 15672:15672 \
-p 25672:25672 \
quay.io/joukou/rabbitmq

ExecStop=/usr/bin/docker kill %p

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-ConditionMachineOf=cadvisor@%i.service
X-Conflicts=rabbitmq@*.service
